        <div class="buttons">
            <button id="prevBtn" disabled>‚¨ÖÔ∏è Indietro</button>
            <button id="nextBtn">‚û°Ô∏è Avanti</button>
        </div>
    </div>

    <script>
        const steps = document.querySelectorAll('.step');
        const dots = document.querySelectorAll('.dot');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        let currentStep = 0;

        function updateSteps() {
            // Nascondi tutti gli step
            steps.forEach(step => step.classList.remove('active'));
            dots.forEach(dot => dot.classList.remove('active'));
            
            // Mostra lo step corrente
            steps[currentStep].classList.add('active');
            dots[currentStep].classList.add('active');
            
            // Aggiorna stato pulsanti
            prevBtn.disabled = currentStep === 0;
            nextBtn.disabled = currentStep === steps.length - 1;
            
            // Cambia testo ultimo pulsante
            if (currentStep === steps.length - 1) {
                nextBtn.textContent = 'üéâ Fine!';
            } else {
                nextBtn.textContent = '‚û°Ô∏è Avanti';
            }
        }

        // Event listeners
        nextBtn.addEventListener('click', () => {
            if (currentStep < steps.length - 1) {
                currentStep++;
                updateSteps();
            }
        });

        prevBtn.addEventListener('click', () => {
            if (currentStep > 0) {
                currentStep--;
                updateSteps();
            }
        });

        // Click sui dots per navigazione diretta
        dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                currentStep = index;
                updateSteps();
            });
        });

        // Inizializza
        updateSteps();
    </script>
